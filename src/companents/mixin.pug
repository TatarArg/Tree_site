mixin createMenu(menu, active)
    each value, key in menu
        if active == key
            a.active(href= value)= key
        else
            a(href= value)= key

mixin section(item)
    section
        h3= item.header
        img(src= require("./images/" + item.image))
        p= item.text
            a(href="#") &hellip;

mixin createMenuBuild(menu, active)
    - var i = 0;
    each value, key in menu
        if i == 1
            a.active(href= "building.html")= active
        else
            a(href= value)= key
        -i++


mixin tableTree(data)
  table(class="table")
   thead(class="table__head")
     tr(class="table__row")
       each key in Object.keys(data[0])
         th(class="table__cell") #{key}
   tbody(class="table__body")
       each row in data
         tr(class="table__row")
           each value in Object.values(row)
             td(class="table__cell") #{value}


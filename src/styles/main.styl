colorText = #6f6d6d

grid-margin-all(ud, lr)
   display grid
   margin ud lr

border(number, style, color)
   border number style color

.header
    grid-margin-all(0px, 10px)
    grid-template-rows 1fr
    grid-template-columns repeat(5, 1fr)
    background-color lightgray
    box-shadow: 10px 5px 5px gray;


    &__title
      grid-column 1
      font-size large
      color colorText

    &__spacer
      grid-column 2

    &__menu-item
      text-align center
      font-size large
      text-decoration none
      padding 1%

      &_active
        background-color: #f87777
        color: #f8f8f8

      &:hover 
        background-color: #f87777
        color: #f8f8f8

.footer
    grid-margin-all(0px, 10px)
    grid-template-columns repeat(2, 1fr)
    grid-template-rows 1fr
    background-color colorText
     
    &__item
      text-align left
      padding 5px
      color #f8f8f8

.card 
    grid-margin-all(0px, 10px)
    grid-template-columns repeat(2, 1fr)
    grid-template-rows repeat(2, 1fr)
    height 300px

    &__photo 
      overflow hidden
 
      &:nth-child(1)
        grid-column 1
        grid-row 1/-1

      &:nth-child(2)
        grid-column 2
        grid-row 1

      &:nth-child(3)
        grid-column 2
        grid-row 2

    &__image 
      width 100%
      height 100%



.menu 
    grid-margin-all(0px, 10px)
    grid-template-columns repeat(4, 1fr)
    grid-template-rows repeat(4, 1fr)
    height 10%
    text-align center

    &__item-image 
      margin-bottom 10px

      &_float
        float right
        width 50%
        height 100%


    &__item-title 
      font-size 1.2rem
      color #333


    &__item-description
      font-size 1rem
      color #555

    &__item
      padding 10px
      background-color lightgray

      &:nth-child(1)
        grid-row 1 / -1
        grid-column 1

      &:nth-child(2)
        grid-row 1 / -1
        grid-column 2

      &:nth-child(3) 
        grid-row: 1 / -1
        grid-column: 3

      &:nth-child(4) 
        grid-row 1
        grid-column 4

      &:nth-child(5) 
        grid-row 2
        grid-column 4

      &:nth-child(6) 
        grid-row 3
        grid-column 4

      &:nth-child(7) 
        grid-row 4
        grid-column 4



.media-card 
  display flex
  flex-direction column 
  align-items center
  text-align left
  margin 10px 10px

  &__image 
    width 30%
    height auto
    margin-bottom 10px 
  

  &__text 
    font-size 1rem
    color #333
    line-height 1.5
    column-count 2
  


@media (max-width: 800px) 
    .header 
        grid-template-columns 1fr 1fr
        grid-template-rows 1fr 1fr
    

        &__title 
          display none
    

        &__menu-item:nth-child(3) 
          grid-column 1
          grid-row 1
    

        &__menu-item:nth-child(4) 
          grid-column 2
          grid-row 1
    

        &__menu-item:nth-child(5) 
          grid-column 1
          grid-row 2

.table
  border(1px, solid, grey)
  margin 0px 10px
  width 98%

  &__head
    background-color #f9f9f9

  &__row

  &__cell
    border(1px, solid, grey)
    


@media (max-width: 800px) 
    .menu 
        grid-template-columns 1fr
        grid-template-rows repeat(7, 1fr)
    

        &__item:nth-child(1) 
          grid-row 1
          grid-column 1
    

        &__item:nth-child(2) 
          grid-row 2
          grid-column 1
   

        &__item:nth-child(3) 
          grid-row 3
          grid-column 1
    

        &__item:nth-child(4) 
          grid-row 4
          grid-column 1
    

        &__item:nth-child(5) 
          grid-row 5
          grid-column 1
    

        &__item:nth-child(6) 
          grid-row 6
          grid-column 1
    

        &__item:nth-child(7) 
          grid-row 7
          grid-column 1

        
        &__item-image_float
          float none
          width auto
          height auto
    


@media (max-width: 800px) 
    .card 
        grid-template-columns 1fr
        grid-template-rows repeat(3, 1fr)
    

        &__photo:nth-child(1) 
          grid-column 1
          grid-row 1
    

        &__photo:nth-child(2) 
          grid-column 1
          grid-row 2
    

        &__photo:nth-child(3) 
          grid-column 1
          grid-row 3

